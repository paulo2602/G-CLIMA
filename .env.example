# ==========================================
# GDASH CLIMA - Variáveis de Ambiente
# ==========================================

# ==========================================
# DATABASE - MongoDB
# ==========================================
MONGODB_ROOT_USERNAME=root
MONGODB_ROOT_PASSWORD=password
MONGODB_URI=mongodb://root:password@localhost:27017
MONGODB_DB=clima_db

# ==========================================
# API - NestJS
# ==========================================
NODE_ENV=development
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24h
API_PORT=3000
API_HOST=0.0.0.0

# ==========================================
# AUTHENTICATION
# ==========================================
# Usuário padrão criado no startup
ADMIN_USER=admin
ADMIN_PASSWORD=admin
ADMIN_EMAIL=admin@clima.ai

# ==========================================
# FRONTEND - Vite + React
# ==========================================
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=GDASH CLIMA
VITE_APP_DESCRIPTION=Plataforma de coleta e análise de dados climáticos
FRONTEND_PORT=5173

# ==========================================
# MESSAGE BROKER - RabbitMQ
# ==========================================
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_QUEUE_NAME=weather.raw
RABBITMQ_QUEUE_DURABLE=true

# ==========================================
# EXTERNAL APIs
# ==========================================
# OpenWeather API
OPENWEATHER_API_KEY=your-openweather-api-key-here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# ==========================================
# COLLECTOR - Python
# ==========================================
COLLECTOR_INTERVAL_MINUTES=60
COLLECTOR_LATITUDE=-23.5505
COLLECTOR_LATITUDE_DEFAULT=-23.5505
COLLECTOR_LONGITUDE=-46.6333
COLLECTOR_LONGITUDE_DEFAULT=-46.6333
COLLECTOR_CITY=São Paulo
COLLECTOR_PORT=8001
COLLECTOR_LOG_LEVEL=INFO

# ==========================================
# WORKER - Go
# ==========================================
WORKER_RABBITMQ_HOST=localhost
WORKER_RABBITMQ_PORT=5672
WORKER_API_URL=http://localhost:3000
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY_MS=5000
WORKER_PORT=8002
WORKER_LOG_LEVEL=INFO

# ==========================================
# DOCKER COMPOSE
# ==========================================
COMPOSE_PROJECT_NAME=clima-ai-platform
COMPOSE_FILE=docker-compose.yml

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ==========================================
# SECURITY
# ==========================================
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ==========================================
# DATA EXPORT
# ==========================================
EXPORT_MAX_RECORDS=1000
EXPORT_FILE_STORAGE=/tmp/exports

# ==========================================
# CACHE
# ==========================================
CACHE_TTL=3600
CACHE_ENABLED=false

# ==========================================
# FEATURES
# ==========================================
ENABLE_SWAGGER=true
ENABLE_INSIGHTS=true
ENABLE_EXPORT=true
